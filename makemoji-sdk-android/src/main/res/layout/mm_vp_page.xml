<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_height="100dp">

    <TextView
        android:id="@+id/_mm_page_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:layout_gravity="center"
        android:text="@string/_mm_categories"
        android:textSize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/_mm_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:height="100dp" />

    <LinearLayout
        android:id="@+id/_mm_one_grid_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/_mm_abc_tv"
            style="@style/MakeMojiHeaderTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/_mm_abc" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="8dp"
            app:piv_animationType="slide"
            app:piv_count="0"
            app:piv_selectedColor="#555555"
            app:piv_unselectedColor="#AAAAAA" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/_mm_backspace_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/_mm_backspace"
            android:padding="4dp"
            android:src="@drawable/mm_backspace_grey600_24dp" />
    </LinearLayout>
</LinearLayout>