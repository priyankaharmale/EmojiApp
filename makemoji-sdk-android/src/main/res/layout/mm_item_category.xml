<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            tools:src="@drawable/mm_grid_icon"

            android:id="@+id/_mm_item_category_iv"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mm_locked_foreground"
            android:visibility="gone"

            android:id="@+id/_mm_item_category_foreground"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        tools:text="Expressions"
        style="@style/MakeMojiHeaderTextAppearance"
        android:id="@+id/_mm_item_category_tv"
        android:layout_height="wrap_content" />

</LinearLayout>